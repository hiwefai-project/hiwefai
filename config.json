{
  "logging": {
    "level": "INFO",
    "download_log_file": "weather-radar-download.log"
  },
  "download": {
    "max_trys": 7,
    "websocket_url": "ws://localhost:8766/update",
    "radar_api_url": "https://radar-api.protezionecivile.it/downloadProduct",
    "base_url": "http://localhost:8080/",
    "path_inference_input": "opt/weather-radar-utilities/data",
    "base_path": "data/instruments/rdr0",
    "products": [
      "VMI"
    ],
    "timezone": "Europe/Rome",
    "interval": "*/10 * * * *",
    "simulation": {
      "enabled": true,
      "source_dir": "data/usecase",
      "starting_datetime": "20251223T110000Z",
      "time_step": 10
    },
    "retry_sleep_seconds": 60
  },
  "websocket_client": {
    "url": "ws://localhost:8766/subscribe",
    "product_type": "VMI"
  },
  "websocket_server": {
    "host": "0.0.0.0",
    "port": 8766,
    "max_size": 1048576,
    "ping_interval": 20,
    "ping_timeout": 20
  },
  "webserver_server": {
    "enabled": true,
    "port": 8080
  }
}
